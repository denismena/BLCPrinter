<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - BLC</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/content/css")
        @Styles.Render("~/content/themes/base/css")
        @Scripts.Render("~/scripts/modernizr")
    </head>
    <body>
        @using Microsoft.AspNet.Identity
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    @*<p class="site-title">@Html.ActionLink(" ", "Index", "Home")

                    </p>*@
                    <img src="~/Images/logo.jpg" />
                </div>
                <div class="float-right">
                    <section id="login">
                            @Html.Partial("_LoginPartial")                        
                        </section>
                </div>
                <div class="float-right">
                    <nav>
                        <ul id="menu">
                            @if (Session["UserId"] != null)
                            {
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                <li>@Html.ActionLink("Contracte", "Index", "Contracts")</li>
                                <li>@Html.ActionLink("Persoane", "Index", "Persons")</li>
                                <li>@Html.ActionLink("Incasari", "Incasari", new { controller = "Contracts", fromDate = DateTime.Today.AddMonths(-1), toDate = DateTime.Today.AddDays(1) })</li>
                                <li>@Html.ActionLink("Librarie", "Index", "Library")</li>
                            }
                        </ul>
                    </nav>
                </div>

            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <div class="content-wrapper clear-fix" style=" display:inline-block; margin-left:50px;">
                @RenderBody()
            </div>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - BLC</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/scripts/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
